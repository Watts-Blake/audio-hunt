extends layout.pug

block content
  .container
          h1= title
  if errors
    .error_container
      ul
        each error in errors
          li: small= error
  form(action='/posts/new' method='post')
    input(type="hidden" name="_csrf" value=csrfToken)
    .form_group
      label(for='title') Title
      input.form_input(type='text', name='title' id="title" placeholder='What\'s your post about?' value=post.title autofocus=true )
    .form_group
      label(for='shortDescription') Short Description
      input.form_input(type='text' name='shortDescription' id="shortDescription" value=post.shortDescription placeholder='Short description of your post...' )
    .form_group
      label(for='content') Thoughts?
      textarea.form_input(name='content' id='content' placeholder="Tell everyone what you think!" rows="5" cols="5") #{post.content}
    .form_group
      label(for="songDetail") Song
      input.form_input(list="songList" name="songDetail" id="songDetail")
      datalist(id="songList")
        each song in songs
          option(value=`${song.songName} by ${song.artistName}`)
    button.btn.btn--primary--outline.submit_button(type='submit') Post

  .forms_container
    form.hidden_form(action="/users/login" method="POST")
      input(type="hidden" name="email" value='test@test.com')
      input(type="hidden" name="password" value='password')
      input(type="hidden" name='_csrf' value=csrfToken)
