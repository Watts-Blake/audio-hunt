extends layout.pug

block content
  .user_banner.container
    .user_banner__pfp
      img(src=`/bruh.jpg`, alt="profile-picture")
    .user_banner__body
      h2.user_banner__body__name [username goes here]
      span.user_banner__body__headline [headline goes here]
      a.user_banner__body__email(href=`mailto:`) [email goes here]
      button.btn.btn--secondary--outline Edit My Profile


  div.main_body_titles.container
    h2 Your Posts
    h2 Your Comments
  .main_body.container
    .user_posts.container
      .media
        img.media__img(src="/bruh.jpg")
        .media__body
          h3= post.title
          span= post.shortDescription
          .media__body__bottom
            small artist name
            small album name
        .comment_count.container
          span 1000
    .user_comments_preview.container
      .comment_preview.media
        .media_body
          //- ::before for speech bubble
          p this is a comment
          small on "This Post"
        .time_elapsed
          span 1d
          br
          small ago
