extends layout.pug

block content
  if errors
    //- set styles for Errors
    div(class='alert alert-danger')
      p The following error(s) occurred:
      ul
        each error in errors
          li= error
  form(action='/users/signup' method='post')
    input(type="hidden" name="_csrf" value=csrfToken)
    .form_group
      label(for='username') Name
      input.form_input(type='text', name='username' id="username" placeholder='User Name' value=user.username autofocus=true required)
    .form_group
      label(for='email') Email
      input.form_input(type='email' name='email' id="email" value=user.email placeholder='Email' required)
    .form_group
      label(for='bio') Bio
      textarea.form_input(name='bio' id='bio' placeholder="Please enter a short bio here. But only if you'd like... ;)") #{user.bio}
    .form_group
      label(for='password') Password
      input.form_input(type='password', name='password' id="password" required )
    .form_group
      label(for='confirmPassword') Confirm Password
      input.form_input(type='password', name='confirmPassword' id="confirmPassword" required )
    label.form_checkbox_group
      input.form_checkbox_group__input(type="checkbox" required)
      div.form_checkbox_group__box
      span Are you 16 years of age or older?
    button.btn.btn--primary--outline.submit_button(type='submit') Sign Up
  .forms_container
    form.hidden_form(action="/users/login" method="POST")
      button.btn.btn--primary--outline.btn--demo(type='submit') Demo User
      input(type="hidden" name="email" id="email" value='test@test.com')
      input(type="hidden" name="password" id="password" value='password')
      input(type="hidden" name="_csrf" value=csrfToken)
