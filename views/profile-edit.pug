extends layout.pug
block content
  form.profile_edit_container.user_banner.container(action=`/users/${user.id}/edit`, method="post")
    input(type="hidden" name="_csrf" value=csrfToken)
    .user_banner__body.container.profile_edit
        .container
          .form_group.container.pic_prof_group
            img.user_banner__pfp.edit_pfp(src=user.profileImg, alt="profile-picture")
            button.btn.btn--secondary--outline.btn-chng-pfp  Change Profile Picture
          .form_group.container.email_user_group
            label(for='username') User Name
            input.form_input(type='text', name='username' id="editUsername" value=user.username autofocus=true required)
            label(for='editEmail') Email
            input.form_input(type='text', name='email' id="editEmail" value=user.email required)
        .container.prof_edit_bot_group
          .form_group.container
            label(for='editHeader') Header
            input.form_input(type='text', name='header' id="editHeader" value=user.header required)
            label(for='editBio') Bio
            textarea.form_input(cols="60", rows="5"  id="editBio" value=user.bio required) #{user.bio}
          .form_group.container.confirm_deactivate_group
            a(href=`/users/${user.id}/edit`).btn.btn--primary--outline.confirmProfBtn
              button Confirm Changes
            a.btn.btn--secondary--outline.deactivateProfBtn
              button(type='button') Deactivate Account
  include includes/modal-confirm-delete.pug
  script(src="/javascripts/profile-edit.js")